<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newRegistration">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newRgstn"
        android:text="AUCTION SYSTEM- New User"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FirstName"
        android:layout_below="@+id/newRgstn"
        android:layout_marginLeft="20dp"
        android:text="First Name:"
        android:textSize="25dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userFirst"
        android:layout_below="@+id/FirstName"
        android:hint="Enter your First Name"
        android:inputType="text"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LastName"
        android:layout_below="@+id/userFirst"
        android:layout_marginLeft="20dp"
        android:text="Last Name:"
        android:textSize="25dp"
        android:layout_marginTop="10dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userLast"
        android:layout_below="@+id/LastName"
        android:hint="Enter your Last Name"
        android:inputType="text"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_below="@+id/userLast"
        android:layout_marginLeft="20dp"
        android:text="E-mail:"
        android:textSize="25dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userEmail"
        android:layout_below="@+id/email"
        android:hint="Enter your email "
        android:inputType="textEmailAddress"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newPassword"
        android:layout_below="@+id/userEmail"
        android:layout_marginLeft="20dp"
        android:text="Password:"
        android:textSize="20dp"
        android:layout_marginTop="10dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userPass"
        android:layout_below="@+id/newPassword"
        android:hint="Enter your Password"
        android:inputType="textWebPassword"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancel"
        android:text="Cancel"
        android:textSize="25dp"
        android:layout_below="@+id/userPass"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true"
      android:layout_toLeftOf="@id/register"
        android:layout_marginRight="150dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register"
        android:text="Register"
        android:textSize="25dp"
        android:layout_below="@+id/userPass"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true"/>





</RelativeLayout>